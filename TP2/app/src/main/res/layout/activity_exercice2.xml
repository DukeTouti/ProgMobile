<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exercice2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_nom"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/editFabricant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_fabricant"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/editAnnee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_annee"
            android:inputType="number"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/editProcesseur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_processeur"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/editRam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_ram"
            android:inputType="number"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/editCamFront"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_cam_front"
            android:inputType="number"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/editCamArriere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_cam_arriere"
            android:inputType="number"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_notation"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="0"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnSauvegarder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_sauvegarder"/>

    </LinearLayout>
</ScrollView>
